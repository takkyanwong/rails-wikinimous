<%= simple_form_for(@article) do |f| %>
  <%= f.input :title %>
  <%= f.input :content, data: { editor: 'markdown' } %>
  <%= f.submit class: 'btn btn-primary' %>
  <% unless @article.new_record? %>
    <%= link_to "Back to article", article_path(@article), class: 'btn btn-secondary' %>
  <% end %>
<% end %>
